# The isBadVersion API is already defined for you.
# def isBadVersion(version: int) -> bool:

class Solution:
    def firstBadVersion(self, n: int) -> int:
        i,j =1, n
        while i <=j:
            mid = i +(j-i)//2
            if isBadVersion(mid) and isBadVersion(mid-1) == False:
                return mid
            elif isBadVersion(mid):
                j = mid-1
            else:
                i = mid+1
                
        return -1
            
                
